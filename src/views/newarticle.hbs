<div class="comment-box expanded">
  <div class="comments">
    <div class="prev-next">
      <button
        class="navbutton prev-comment-button"
        style="display: none"
      ></button>
      <button
        class="navbutton next-comment-button"
        style="display: none"
      ></button>
    </div>
    {{#if articleObj.comments}}
      {{#each articleObj.comments}}
        <div
          class="comment-block"
          data-article-element-index="{{this.0.reference}}"
          style="display: none"
        >
          <div class="comment-info">
            <strong class="comment-name">
              {{#if this.0.user}}
                {{this.0.user}}
              {{else}}
                Anonymous User
              {{/if}}
            </strong>
          </div>
          <div class="comment-content">{{this.0.body}}</div>
        </div>
      {{/each}}
    {{/if}}
  </div>
  <div class="comment-input">
    <textarea
      class="addCommentTextArea"
      rows="1"
      placeholder="Comment on this paragraph.."
    ></textarea>
    <button class="addComment button-send" title="Submit comment"></button>
  </div>
</div>
<footer>
  <div>
    <strong>Commentative</strong><br />
    Host a discussion about anything online.
    <br /><br />Built at
    <a
      target="_blank"
      href="https://hackthepress.org/"
      title="Hack the Press"
    >Hack the Press</a>
  </div>
</footer>